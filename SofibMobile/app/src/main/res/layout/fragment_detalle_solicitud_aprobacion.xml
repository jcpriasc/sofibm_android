<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/detalle_solicitud_cabecera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre Paciente"
                android:id="@+id/txtNombrePaciente"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:textColor="@android:color/background_light"
                android:textSize="@dimen/font_size_title"
                android:textStyle="bold|italic"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estado"
                android:id="@+id/txtEstado"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:textColor="@android:color/background_light"
                android:textSize="@dimen/font_size_title"
                android:textStyle="bold|italic"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha Solicitud"
                android:id="@+id/txtFechaSolicitud"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/background_light"
                android:textSize="@dimen/font_size_title"
                android:layout_marginBottom="15dp"
                android:textStyle="bold|italic"/>
        </LinearLayout>

        <ScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:fillViewport="true">

            <LinearLayout
                android:id="@+id/detalle_solicitud_cuerpo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lbl_descripcion"
                        android:textStyle="bold"
                        android:textColor="@color/colorTextTitle"
                        android:textSize="@dimen/font_size_subtitle"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/lbl_descripcion"
                        android:textSize="@dimen/font_size_text"
                        android:id="@+id/txtDescripcion"
                        android:layout_marginLeft="10dp"/>
                </LinearLayout>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:shrinkColumns="1"
                    android:stretchColumns="1">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lbl_tipo_autorizacion"
                            android:textStyle="bold"
                            android:textColor="@color/colorTextTitle"
                            android:textSize="@dimen/font_size_subtitle"
                            android:layout_marginTop="@dimen/margin_detail_text_top"
                            android:layout_marginLeft="10dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/lbl_tipo_autorizacion"
                            android:textSize="@dimen/font_size_text"
                            android:id="@+id/txtTipoAutorizacion"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lbl_tipo_entidad"
                            android:textStyle="bold"
                            android:textColor="@color/colorTextTitle"
                            android:textSize="@dimen/font_size_subtitle"
                            android:layout_marginTop="@dimen/margin_detail_text_top"
                            android:layout_marginLeft="10dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/lbl_tipo_entidad"
                            android:textSize="@dimen/font_size_text"
                            android:id="@+id/txtTipoEntidad"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lbl_solicitante"
                            android:textStyle="bold"
                            android:textColor="@color/colorTextTitle"
                            android:textSize="@dimen/font_size_subtitle"
                            android:layout_marginTop="@dimen/margin_detail_text_top"
                            android:layout_marginLeft="10dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/lbl_solicitante"
                            android:textSize="@dimen/font_size_text"
                            android:id="@+id/txtSolicitante"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lbl_autoriza"
                            android:textStyle="bold"
                            android:textColor="@color/colorTextTitle"
                            android:textSize="@dimen/font_size_subtitle"
                            android:layout_marginTop="@dimen/margin_detail_text_top"
                            android:layout_marginLeft="10dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/lbl_autoriza"
                            android:textSize="@dimen/font_size_text"
                            android:id="@+id/txtAutoriza"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lbl_fecha_autorizacion"
                            android:textStyle="bold"
                            android:textColor="@color/colorTextTitle"
                            android:textSize="@dimen/font_size_subtitle"
                            android:layout_marginTop="@dimen/margin_detail_text_top"
                            android:layout_marginLeft="10dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/lbl_fecha_autorizacion"
                            android:textSize="@dimen/font_size_text"
                            android:id="@+id/txtFechaAutorizacion"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lbl_servicio"
                            android:textStyle="bold"
                            android:textColor="@color/colorTextTitle"
                            android:textSize="@dimen/font_size_subtitle"
                            android:layout_marginTop="@dimen/margin_detail_text_top"
                            android:layout_marginLeft="10dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/lbl_servicio"
                            android:textSize="@dimen/font_size_text"
                            android:id="@+id/txtServicio"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lbl_proveedor"
                            android:textStyle="bold"
                            android:textColor="@color/colorTextTitle"
                            android:textSize="@dimen/font_size_subtitle"
                            android:layout_marginTop="@dimen/margin_detail_text_top"
                            android:layout_marginLeft="10dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/lbl_proveedor"
                            android:textSize="@dimen/font_size_text"
                            android:id="@+id/txtProveedor"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lbl_prestador"
                            android:textStyle="bold"
                            android:textColor="@color/colorTextTitle"
                            android:textSize="@dimen/font_size_subtitle"
                            android:layout_marginTop="@dimen/margin_detail_text_top"
                            android:layout_marginLeft="10dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/lbl_prestador"
                            android:textSize="@dimen/font_size_text"
                            android:id="@+id/txtPrestador"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lbl_justificacion"
                            android:textStyle="bold"
                            android:textColor="@color/colorTextTitle"
                            android:textSize="@dimen/font_size_subtitle"
                            android:layout_marginTop="@dimen/margin_detail_text_top"
                            android:layout_marginLeft="10dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/lbl_justificacion"
                            android:textSize="@dimen/font_size_text"
                            android:id="@+id/txtJustificacion"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp" />
                    </TableRow>
                </TableLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btnDetalle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:clickable="true"
        app:layout_anchor="@id/detalle_solicitud_cabecera"
        app:layout_anchorGravity="bottom|right|end"
        app:fabSize="normal"
        android:baselineAlignBottom="false"
        app:backgroundTint="@color/colorTextTitle"
        android:src="@mipmap/icono_mas" />

</android.support.design.widget.CoordinatorLayout>